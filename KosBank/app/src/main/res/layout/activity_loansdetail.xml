<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:orientation="horizontal"
        android:background="#005dc7" >

        <ImageButton
            android:id="@+id/bt_close"
            android:layout_width="?attr/actionBarSize"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:tint="@color/overlay_light_90" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="대출상품"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
            android:textColor="@color/overlay_light_90"
            app:fontFamily="sans-serif-medium" />

        <ImageButton
            android:layout_width="?attr/actionBarSize"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:tint="@color/overlay_light_90" />
    </LinearLayout>

    <TextView
        android:id="@+id/d_name2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/overlay_dark_90"/>

    <TextView
        android:id="@+id/d_summary2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/overlay_dark_90"/>

    <TextView
        android:id="@+id/d_min_date2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/overlay_dark_90"/>

    <TextView
        android:id="@+id/d_max_date2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/overlay_dark_90" />

    <TextView
        android:id="@+id/d_interest_rate2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/overlay_dark_90" />

    <TextView
        android:id="@+id/d_min_price2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/overlay_dark_90" />

    <TextView
        android:id="@+id/d_max_price2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/overlay_dark_90" />

    <TextView
        android:id="@+id/d_explanation1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/overlay_dark_90" />

    <TextView
        android:id="@+id/d_explanation2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/overlay_dark_90" />

    <TextView
        android:id="@+id/d_explanation3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/overlay_dark_90" />

</LinearLayout>
