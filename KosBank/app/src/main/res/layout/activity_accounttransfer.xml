<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:orientation="horizontal"
        android:background="#005dc7" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <include layout="@layout/toolbar" />

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:paddingTop="50dp"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/account1"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:inputType="text"
                android:padding="10dp"
                android:text="계좌번호"
                android:textAlignment="center" />

            <Spinner
                android:id="@+id/account_TransferList"
                android:layout_width="180dp"
                android:layout_height="40dp"
                android:inputType="text"
                android:padding="10dp"
                android:textAlignment="center"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/Transfer_balance1"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:inputType="text"
                android:padding="10dp"
                android:text="잔액"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/Transfer_balance"
                android:layout_width="180dp"
                android:layout_height="40dp"
                android:inputType="text"
                android:padding="10dp"
                android:textAlignment="center"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/Transfer_limit1"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:inputType="text"
                android:padding="10dp"
                android:text="일일한도"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/Transfer_limit"
                android:layout_width="180dp"
                android:layout_height="40dp"
                android:inputType="text"
                android:padding="10dp"
                android:textAlignment="center"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/accountPW2"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:padding="10dp"
                android:text="계좌비밀번호"
                android:inputType="text"
                android:textAlignment="center"
                android:layout_weight="10"/>

            <EditText
                android:id="@+id/transferAccountPW"
                android:layout_width="180dp"
                android:layout_height="40dp"
                android:hint="계좌비밀번호"
                android:inputType="textPassword"
                android:padding="10dp"
                android:textAlignment="center"
                android:layout_weight="1"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/TransferMoney1"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:inputType="text"
                android:padding="10dp"
                android:text="이체금액"
                android:textAlignment="center"/>

            <EditText
                android:id="@+id/TransferMoney"
                android:layout_width="180dp"
                android:layout_height="40dp"
                android:layout_marginRight="10dp"
                android:inputType="text"
                android:padding="10dp"
                android:textAlignment="center"
                android:layout_weight="1"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/out_comment1"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:padding="10dp"
                android:text="보내는분 메시지"
                android:inputType="text"
                android:layout_gravity="left"/>

            <EditText
                android:id="@+id/out_comment"
                android:layout_width="180dp"
                android:layout_height="40dp"
                android:inputType="text"
                android:textAlignment="center"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/bankName2"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:padding="10dp"
                android:text="입금은행"
                android:inputType="text"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/bankName3"
                android:layout_width="180dp"
                android:layout_height="40dp"
                android:layout_marginRight="10dp"
                android:inputType="text"
                android:text="코스뱅크"
                android:padding="10dp"
                android:textAlignment="center"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/sender_account1"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:padding="10dp"
                android:text="입금계좌번호"
                android:inputType="text"
                android:textAlignment="center"/>

            <EditText
                android:id="@+id/sender_account"
                android:layout_width="180dp"
                android:layout_height="40dp"
                android:layout_marginRight="10dp"
                android:inputType="text"
                android:padding="10dp"
                android:textAlignment="center"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/sender_name1"
                android:layout_width="110dp"
                android:layout_height="40dp"
                android:padding="10dp"
                android:text="예금주"
                android:inputType="text"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/sender_name"
                android:layout_width="110dp"
                android:layout_height="40dp"
                android:layout_marginRight="10dp"
                android:inputType="text"
                android:padding="10dp"
                android:textAlignment="center"/>
            <Button
                android:id="@+id/btn_AccountNameChk"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:text="확인"
                android:textColor="#fff"
                android:background="@drawable/allradius_1"

                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/in_comment1"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:padding="10dp"
                android:text="받는분 메시지"
                android:inputType="text"
                android:textAlignment="center"/>

            <EditText
                android:id="@+id/in_comment"
                android:layout_width="180dp"
                android:layout_height="40dp"
                android:layout_marginRight="10dp"
                android:inputType="text"
                android:padding="10dp"
                android:textAlignment="center"/>

        </LinearLayout>





        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_accountTransfer"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_marginRight="10dp"
                android:background="#005dc7"
                android:text="이체하기"
                android:textColor="#ffffff" />

            <Button
                android:id="@+id/btn_reset2"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:background="#005dc7"
                android:text="취소"
                android:textColor="#ffffff" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>