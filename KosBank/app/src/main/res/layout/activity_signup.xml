<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">


    <LinearLayout
        android:paddingTop="50dp"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <EditText
            android:id="@+id/SignId"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="5dp"
            android:padding="10dp"
            android:hint="아이디"
            android:inputType="text" />

        <EditText
            android:id="@+id/SignPw"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="5dp"
            android:padding="10dp"
            android:hint="비밀번호"
            android:inputType="textPassword" />

        <EditText
            android:id="@+id/SignName"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="5dp"
            android:padding="10dp"
            android:hint="이름"
            android:inputType="text" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/SignRRN_first"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="5dp"
                android:padding="10dp"
                android:hint="주민번호 앞자리"
                android:inputType="number" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30dp"
                android:text="-"/>
            <EditText
                android:id="@+id/SignRRN_last"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="5dp"
                android:padding="10dp"
                android:hint="주민번호 뒷자리"
                android:inputType="numberPassword" />

        </LinearLayout>


        <EditText
            android:id="@+id/SignAddress"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="5dp"
            android:padding="10dp"
            android:hint="주소"
            android:inputType="text" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/SignJob"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_marginBottom="5dp"
                android:padding="10dp"
                android:hint="직업"
                android:inputType="text" />
            <EditText
                android:id="@+id/SignPhone"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_marginBottom="5dp"
                android:padding="10dp"
                android:hint="HP)010-xxxx-xxxx"
                android:inputType="text" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/email"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_marginBottom="5dp"
                android:padding="10dp"
                android:hint="이메일"
                android:inputType="number" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30dp"
                android:text="\@"/>
            <EditText
                android:id="@+id/domain"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_marginBottom="5dp"
                android:padding="10dp"
                android:hint="도메인"
                android:inputType="numberPassword" />

        </LinearLayout>



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/btn_SignUp"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:text="회원가입" />

            <Button
                android:id="@+id/btn_OCR"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:text="신분증 OCR" />
        </LinearLayout>


    </LinearLayout>






</LinearLayout>