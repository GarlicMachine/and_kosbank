<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.teamproject.sample.kosbank.OCR_Activity">

    <include layout="@layout/guast_toolbar" />


    <LinearLayout
        android:paddingTop="50dp"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">




        <EditText
            android:id="@+id/SignId"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="5dp"

            android:hint="아이디"
            android:inputType="text" />

        <EditText
            android:id="@+id/SignPw"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="5dp"

            android:hint="비밀번호"
            android:inputType="textPassword" />

        <EditText
            android:id="@+id/SignName"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="5dp"

            android:hint="이름"
            android:inputType="text" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/SignRRN_first"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="5dp"

                android:hint="주민번호 앞자리"
                android:inputType="number"
                android:maxLength="6" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:text="-"/>

            </LinearLayout>

            <EditText
                android:id="@+id/SignRRN_last"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="5dp"

                android:hint="주민번호 뒷자리"
                android:inputType="numberPassword"
                android:maxLength="7"/>

        </LinearLayout>


        <EditText
            android:id="@+id/SignAddress"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="5dp"

            android:hint="주소"
            android:inputType="text" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/SignJob"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_marginBottom="5dp"

                android:hint="직업"
                android:inputType="text" />
            <EditText
                android:id="@+id/SignPhone"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_marginBottom="5dp"

                android:hint="HP)010-xxxx-xxxx"
                android:inputType="text" />

        </LinearLayout>


            <EditText
                android:id="@+id/SignEmail"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="5dp"

                android:hint="이메일"
                android:inputType="text" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingRight="20dp">
                <Button
                    android:id="@+id/btn_SignUp"
                    android:layout_width="140dp"
                    android:layout_height="40dp"
                    android:background="#555555"
                    android:textColor="#ffffff"
                    android:text="회원가입" />

            </LinearLayout>


            <Button
                android:id="@+id/btn_OCR"
                android:layout_width="140dp"
                android:layout_height="40dp"
                android:background="#555555"
                android:textColor="#ffffff"
                android:text="신분증 OCR" />

        </LinearLayout>

    </LinearLayout>






</android.support.design.widget.CoordinatorLayout>